{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2020"]
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules"]
} 